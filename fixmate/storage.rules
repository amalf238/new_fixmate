rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Issue photos - authenticated users can upload, everyone can read
    match /issue_photos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures - authenticated users can upload their own, everyone can read
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // âœ… NEW: Worker profile pictures - authenticated users can upload their own, everyone can read
    match /worker_profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Portfolio photos - Workers can upload, everyone can read
    match /portfolio_photos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}